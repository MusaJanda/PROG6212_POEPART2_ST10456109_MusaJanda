@using CMCS.Models
@model List<CMCS.Models.Claim>

@{
    var user = ViewData["User"] as Lecturer;
    var claims = ViewData["Claims"] as List<Claim>;
}

<div class="container mt-4">
    <!-- Welcome Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body text-center bg-light rounded">
            <h2 class="fw-bold text-primary">Welcome, @user?.FirstName!</h2>
            <p class="text-muted mb-0">Manage your monthly claims and track their status</p>
        </div>
    </div>

    <!-- Action Buttons - Clean and Centered -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card text-center h-100 border-primary">
                <div class="card-body">
                    <i class="bi bi-plus-circle display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Submit New Claim</h5>
                    <p class="card-text text-muted">Create and submit a new claim for hours worked</p>
                    <a asp-controller="Claim" asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle"></i> Create Claim
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card text-center h-100 border-info">
                <div class="card-body">
                    <i class="bi bi-list-check display-4 text-info mb-3"></i>
                    <h5 class="card-title">View All Claims</h5>
                    <p class="card-text text-muted">Check status and details of all your submitted claims</p>
                    <a asp-controller="Claim" asp-action="MyClaims" class="btn btn-info btn-lg">
                        <i class="bi bi-list-check"></i> My Claims
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Claims Section -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0"><i class="bi bi-clock-history"></i> Recent Claims</h5>
        </div>
        <div class="card-body">
            @if (claims != null && claims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim Date</th>
                                <th>Hours</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Submitted Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in claims)
                            {
                                <tr>
                                    <td>@claim.ClaimDate.ToString("dd MMM yyyy")</td>
                                    <td>@claim.HoursWorked.ToString("F2")</td>
                                    <td>R @((claim.HoursWorked * claim.HourlyRate).ToString("F2"))</td>
                                    <td>
                                        @{
                                            var statusClass = claim.Status switch
                                            {
                                                ClaimStatus.FullyApproved => "bg-success",
                                                ClaimStatus.ApprovedByCoordinator => "bg-warning",
                                                ClaimStatus.ApprovedByManager => "bg-info",
                                                ClaimStatus.Rejected => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                            var statusText = claim.Status switch
                                            {
                                                ClaimStatus.FullyApproved => "Approved",
                                                ClaimStatus.ApprovedByCoordinator => "Pending Manager",
                                                ClaimStatus.ApprovedByManager => "Pending Coordinator",
                                                ClaimStatus.Rejected => "Rejected",
                                                _ => "Pending"
                                            };
                                        }
                                        <span class="badge @statusClass">@statusText</span>
                                    </td>
                                    <td>@claim.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <a asp-controller="Claim" asp-action="Details" asp-route-id="@claim.ClaimId"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="text-muted mt-3">You have no recent claims</h5>
                    <p class="text-muted">Get started by submitting your first claim</p>
                    <a asp-controller="Claim" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Your First Claim
                    </a>
                </div>
            }
        </div>
    </div>
</div>