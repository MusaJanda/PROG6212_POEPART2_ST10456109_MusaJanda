@model List<CMCS.Models.Claim>

@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-stamp"></i> Final Approval Required</h1>
        <span class="badge bg-warning fs-6">@Model.Count Awaiting Final Approval</span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
               

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Lecturer</th>
                                <th>Claim Date</th>
                                <th>Hours</th>
                                <th>Total Amount</th>
                                <th>Coordinator</th>
                                <th>Approved Date</th>
                                <th>Documents</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@claim.Lecturer?.FirstName @claim.Lecturer?.LastName</strong>
                                        <br>
                                        <small class="text-muted">@claim.Lecturer?.Email</small>
                                    </td>
                                    <td>@claim.ClaimDate.ToString("dd MMM yyyy")</td>
                                    <td>@claim.HoursWorked.ToString("F2")</td>
                                    <td><strong>R @((claim.HoursWorked * claim.HourlyRate).ToString("F2"))</strong></td>
                                    <td>
                                        @if (claim.ApprovedByCoordinator != null)
                                        {
                                            <span>@claim.ApprovedByCoordinator?.FirstName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Coordinator @claim.ApprovedByCoordinatorId</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.CoordinatorApprovalDate.HasValue)
                                        {
                                            @claim.CoordinatorApprovalDate.Value.ToString("dd MMM yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not set</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            <span class="badge bg-success">@claim.Documents.Count files</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No files</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Claim" asp-action="Review" asp-route-id="@claim.ClaimId"
                                           class="btn btn-warning btn-sm">
                                            <i class="bi bi-stamp"></i> Review Claim
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-check-circle display-1 text-success"></i>
                <h3 class="text-success mt-3">All Caught Up!</h3>
                <p class="text-muted">There are no claims awaiting final approval.</p>
                <p class="text-muted small">Claims will appear here after they have been approved by Programme Coordinators.</p>
            </div>
        </div>
    }
</div>