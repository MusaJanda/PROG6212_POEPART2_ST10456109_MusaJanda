@model List<CMCS.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-list-check"></i> My Claims</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Claim
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim Date</th>
                                <th>Hours</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Progress</th>
                                <th>Last Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimDate.ToString("dd MMM yyyy")</td>
                                    <td>@claim.HoursWorked.ToString("F2")</td>
                                    <td>R @((claim.HoursWorked * claim.HourlyRate).ToString("F2"))</td>
                                    <td>
                                        @{
                                            var (statusClass, statusText, progressPercent) = GetClaimStatusInfo(claim.Status);
                                        }
                                        <span class="badge @statusClass">@statusText</span>
                                    </td>
                                    <td style="width: 200px;">
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar @statusClass" role="progressbar"
                                                 style="width: @progressPercent%;"
                                                 aria-valuenow="@progressPercent"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"></div>
                                        </div>
                                        <small class="text-muted">@progressPercent% Complete</small>
                                    </td>
                                    <td>
                                        @{
                                            var lastUpdate = claim.ManagerApprovalDate ?? claim.CoordinatorApprovalDate ?? claim.CreatedDate;
                                        }
                                        @lastUpdate.ToString("dd MMM yyyy HH:mm")
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@claim.ClaimId"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        @if (claim.Status == ClaimStatus.Pending)
                                        {
                                            <a asp-action="Edit" asp-route-id="@claim.ClaimId"
                                               class="btn btn-sm btn-outline-warning ms-1">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h3 class="text-muted mt-3">No claims found</h3>
                <p class="text-muted">You haven't submitted any claims yet.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-plus-circle"></i> Create Your First Claim
                </a>
            </div>
        </div>
    }
</div>

@functions {
    private (string statusClass, string statusText, int progressPercent) GetClaimStatusInfo(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Pending => ("bg-secondary", "Pending Review", 25),
            ClaimStatus.ApprovedByCoordinator => ("bg-warning", "Pending Manager Approval", 50),
            ClaimStatus.ApprovedByManager => ("bg-info", "Pending Final Approval", 75),
            ClaimStatus.FullyApproved => ("bg-success", "Fully Approved", 100),
            ClaimStatus.Rejected => ("bg-danger", "Rejected", 100),
           
            _ => ("bg-secondary", "Unknown", 0)
        };
    }
}