@using CMCS.Models.ViewModel

@model ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h1>Manage Roles for @Model.Email</h1>

<form asp-controller="Admin" asp-action="UpdateRoles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group">
        <h3>Current Roles:</h3>
        <ul>
            @foreach (var role in Model.Roles)
            {
                <li>@role</li>
            }
        </ul>
    </div>

    <div class="form-group">
        <h3>Assign New Roles:</h3>
        @foreach (var roleName in (List<string>)ViewBag.AllRoles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="@roleName" name="roles" value="@roleName"
                       @(Model.Roles.Contains(roleName) ? "checked" : "")>
                <label class="form-check-label" for="@roleName">
                    @roleName
                </label>
            </div>
        }
    </div>
    <hr />
    <button type="submit" class="btn btn-primary">Update Roles</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
